{
  "telemetry.telemetryLevel": "off",
  "git.confirmSync": false,
  "git.autofetch": true,
  "update.showReleaseNotes": false,
  "editor.fontFamily": "FiraCode Nerd Font",
  "editor.fontLigatures": true,
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "security.workspace.trust.untrustedFiles": "open",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "workbench.enableExperiments": false,
  "workbench.preferredDarkColorTheme": "Catppuccin Mocha",
  "workbench.preferredLightColorTheme": "Catppuccin Frapp√©",
  "workbench.editor.enablePreview": true,
  "window.openFilesInNewWindow": "on",
  "window.openFoldersInNewWindow": "on",
  "debug.toolBarLocation": "docked",
  "files.eol": "\n",
  "files.exclude": {
    "**/.git": false,
    "**/.env": false
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "window.titleBarStyle": "custom",
  "files.autoSave": "afterDelay",
  "editor.wordWrap": "on",
  "security.workspace.trust.banner": "never",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.formatOnSave": true,
  "prettier.singleQuote": true,
  "editor.lineNumbers": "relative",
  // VIM Config
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["K"],
      "commands": ["lineBreakInsert"],
      "silent": true
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  // "vim.neovimPath": "/usr/bin/nvim",
  // "vim.enableNeovim": true,
  // "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
  // "vscode-neovim.neovimInitVimPaths.linux": "$HOME/.config/nvim/init.lua",
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "[yaml]": {
    "editor.tabSize": 3
  },
  "codesnap.realLineNumbers": true,
  "codesnap.backgroundColor": "",
  "codesnap.transparentBackground": true,
  "codesnap.boxShadow": "",
  "polacode.transparentBackground": true,
  "polacode.shadow": "",
  "C_Cpp.default.compilerPath": "/usr/bin/g++",
  "debug.onTaskErrors": "showErrors",
  "cmake.cmakePath": "/usr/local/bin/cmake",
  "cmake.sourceDirectory": "${workspaceRoot}/projects/projname",
  "cmake.buildDirectory": "${workspaceRoot}/projects/projname",
  "cmake.configureOnOpen": true,
  "editor.tabSize": 3,
  "window.autoDetectColorScheme": true,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "window.commandCenter": true,
  "terminal.external.osxExec": "alacritty",
  "terminal.external.linuxExec": "alacritty",
  "terminal.explorerKind": "both",
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.iconTheme": "catppuccin-mocha",
}
